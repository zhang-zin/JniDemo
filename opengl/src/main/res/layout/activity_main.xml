<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.zj.opengl.MyGlSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RadioGroup
        android:id="@+id/group_record_speed"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_above="@+id/bt_record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/group_record_speed_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_record_speed_extra_slow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/radio_btn_speed_bg"
            android:button="@null"
            android:gravity="center"
            android:text="极慢"
            android:textColor="@drawable/radio_btn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_slow"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/radio_btn_speed_bg"
            android:button="@null"
            android:gravity="center"
            android:text="慢"
            android:textColor="@drawable/radio_btn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_normal"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/radio_btn_speed_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="标准"
            android:textColor="@drawable/radio_btn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_fast"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/radio_btn_speed_bg"
            android:button="@null"
            android:gravity="center"
            android:text="快"
            android:textColor="@drawable/radio_btn_record_speed_text" />

        <RadioButton
            android:id="@+id/rbtn_record_speed_extra_fast"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/radio_btn_speed_bg"
            android:button="@null"
            android:gravity="center"
            android:text="极快"
            android:textColor="@drawable/radio_btn_record_speed_text" />

    </RadioGroup>

    <com.zj.opengl.RecordButton
        android:id="@+id/bt_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_record_bg"
        android:gravity="center"
        android:text="按住\n录像"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chk_bigeye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大眼" />

        <CheckBox
            android:id="@+id/chk_stick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贴纸" />

        <CheckBox
            android:id="@+id/chk_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美颜" />
    </LinearLayout>

</RelativeLayout>